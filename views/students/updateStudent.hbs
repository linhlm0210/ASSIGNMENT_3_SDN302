<div class="wrap">
  <h1 class="text-center">Update Student</h1><br />
  <div class="container mt-5">
    <div class="panel-body">
      {{#if error}}
      <div class="alert alert-danger" role="alert">
        {{error}}
      </div>
      {{/if}}
      <form id="updateStudentForm" class="form-card" action="/students/{{student._id}}/update" method="post">
        <input type="hidden" name="id" value="{{student._id}}" />

        <div class="form-group mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" id="name" name="name" class="form-control" value="{{student.name}}" required />
        </div>
        
        <div class="form-group mb-3">
          <label for="studentCode" class="form-label">Student Code</label>
          <textarea id="studentCode" name="studentCode" class="form-control" required>{{student.studentCode}}</textarea>
        </div>

        <div class="form-group mb-4">
          <label for="isActive" class="form-label">Active Status</label>
          <select id="isActive" name="isActive" class="form-control" required>
            <option value="true" {{#if student.isActive}}selected{{/if}}>Yes</option>
            <option value="false" {{#unless student.isActive}}selected{{/unless}}>No</option>
          </select>
        </div>

        <div class="d-grid gap-2 col-6 mx-auto">
          <button type="submit" id="updateStudentBtn" class="btn btn-outline-success">Update Student</button>
        </div>
      </form>
    </div>
  </div>
</div>
