<div class="wrap"> 
  <h1 class="text-center">Students List</h1><br />

  <div class="d-grid gap-2 col-6 mx-auto">
    <button class="btn btn-outline-success" type="button">
      <a class="link-success" href="/students/create" style="text-decoration:none;">
        Add Student
      </a>
    </button>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <div class="col-6">
      <form id="filterForm" action="/students" method="get" class="row g-3">
        <div class="col-auto">
          <label for="isActiveFilter" class="col-form-label">Filter by Active Status:</label>
        </div>
        <div class="col-auto">
          <select id="isActiveFilter" name="isActive" class="form-select">
            <option value="">All</option>
            <option value="true" {{#if (eq query.isActive "true")}}selected{{/if}}>Active</option>
            <option value="false" {{#if (eq query.isActive "false")}}selected{{/if}}>Inactive</option>
          </select>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-outline-primary">Filter</button>
        </div>
      </form>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <div class="col-6">
      {{#each student}}
        <div class="card mb-4">
          <div class="card-header d-flex justify-content-between align-items-center">
            <span>{{this.name}}</span>
            <div>
              <a href="/students/{{this._id}}/update" class="btn btn-outline-primary btn-sm" title="Update student">
                <i class="fas fa-edit"></i>
              </a>
              <form action="/students/{{this._id}}/delete" method="POST" style="display:inline;">
                <button class="btn btn-outline-danger btn-sm" type="submit" title="Delete student" onclick="return confirm('Are you sure you want to delete this student?');">
                  <i class="fas fa-trash-alt"></i>
                </button>
              </form>
            </div>
          </div>
          <div class="card-body text-secondary">
            <p class="card-text">{{this.studentCode}}</p>
          </div>
        </div>
      {{else}}
        <p class="text-center">No students found.</p>
      {{/each}}
    </div>
  </div>
</div>
